<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'sidebar' %>
    </div>
    <div class="col-md-9">
      <div class="row">
        <% @posts.each do |post| %>
        <div class="col-lg-3 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
              <p class="card-text"><%= truncate(post.body, length: 100) %></p>
              <div class="row">
                <div class="col-md-6">
                  <small class="text-muted"><%= post.created_at.strftime("%Y/%m/%d") %></small>
                </div>
                <p>評価値: <%= @rating %></p>
                <div class="col-md-6">
                  <div class="d-flex justify-content-end">
                    <%= link_to "詳細を見る", post_path(post), class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
